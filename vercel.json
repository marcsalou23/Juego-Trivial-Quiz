{
    "version": 2,
    "builds": [
        { "src": "server/server.js", "use": "@vercel/node" },
        { "src": "client/package.json", "use": "@vercel/node" }
    ],
    "routes": [
        { "src": "/api/(.*)", "dest": "server/server.js" },
        { "src": "/(.*)", "dest": "client/$1" }
    ]
}
